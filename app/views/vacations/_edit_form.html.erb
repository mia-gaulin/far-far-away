<div class="form">
  <%= form_for @vacation do |f| %>
    <div class="field">
      <%= f.label :vacationer, "Name for Reservation" %><br />
      <% if current_user %>
        <%= f.text_field :vacationer, value: @vacation.vacationer %>
      <% else %>
        <%= f.text_field :vacationer %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :start_date, "Start Date" %><br />
      <%= f.date_field :start_date, value: @vacation.start_date %>
    </div>

    <div class="field">
      <%= f.label :end_date, "End Date" %><br />
      <%= f.date_field :end_date, value: @vacation.end_date %>
    </div>

    <div class="field">
      <%= f.label :num_of_people, "Number of People" %><br />
      <%= f.text_field :num_of_people, value: @vacation.num_of_people %>
    </div>

    <div class="actions">
      <%= f.submit "Update Vacation" %>
    </div>
  <% end %>
</div>
