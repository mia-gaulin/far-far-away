<%= form_for [@planet, @vacation] do |f| %>
  <div>
    <%= f.label :vacationer, "Name for Reservation" %>
    <%= f.text_field :vacationer %>
  </div>

  <div>
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, :value => Time.now.strftime("%Y-%m-%d") %>
  </div>

  <div>
    <%= f.label :end_date, "End Date" %>
    <%= f.date_field :end_date, :value => Time.now.strftime("%Y-%m-%d") %>
  </div>

  <div>
    <%= f.label :num_of_people, "Number of People" %>
    <%= f.text_field :num_of_people %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
