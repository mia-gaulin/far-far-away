<div class="static">
  <h2>Pick a destination</h2>

  <div class="container">
    <div class="index">
      <div class="left">
        <ul class="planets-list">
          <% @planets.each do |planet| %>
            <div class="planet">
              <%= link_to planet.name, planet_path(planet) %>
            </div>
          <% end %>
        </ul><br />

      </div>

      <div class="right">
        <div class="fotorama"
             data-width="100%"
             data-maxheight="300"
             data-transition="crossfade"
             data-autoplay="1500">
          <img src="https://s3.amazonaws.com/far-far-away-prod/MosEisley.png">
          <img src="https://s3.amazonaws.com/far-far-away-prod/Felucia.png">
          <img src="https://s3.amazonaws.com/far-far-away-prod/Bespin.png">
          <img src="https://s3.amazonaws.com/far-far-away-prod/Yavin.png">
        </div>
      </div>
    </div>

    <% if !params[:query] %>
    <%= paginate @planets %>
    <% end %>
    
  </div>
</div>
